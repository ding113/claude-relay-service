{
  "name": "claude-relay-service-v2",
  "version": "2.0.0",
  "private": true,
  "description": "Claude Relay Service v2 - Monorepo Root",
  "scripts": {
    "dev": "pnpm --parallel --filter './backend' --filter './frontend' dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "lint": "pnpm --parallel --filter './backend' --filter './frontend' lint",
    "test": "pnpm --parallel --filter './backend' test",
    "clean": "pnpm --parallel --filter './backend' --filter './frontend' clean"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
