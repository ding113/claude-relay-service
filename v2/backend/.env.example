# 🌐 Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# 🔐 Security (⚠️ 必须修改)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
ENCRYPTION_KEY=12345678901234567890123456789012  # 必须是32字符

# 📊 Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1  # v2 使用 DB 1（v1 使用 DB 0）
REDIS_ENABLE_TLS=false

# 📝 Logging
LOG_LEVEL=info
LOG_PRETTY=true

# 🔧 Development
DEBUG=false
